<theme>

    

    <view name="system">
        <video name="backgroundpromo">
            <audio>false</audio>
            <pos>0 0</pos>
            <cropSize>1 1</cropSize>
            <path>./_inc/systems/system-view/1080p/${system.theme}.mp4</path> 
            <default>./_inc/systems/system-view/1080p/default.mp4</default> 
            <zIndex>9</zIndex>
            <fadeInTime>.5</fadeInTime>
            <brightness>${vidBright}</brightness>
            <saturation>${vidSat}</saturation>
            <color>${vidColor}</color>
        </video>
        <image name="backgroundpromo">
                <visible>false</visible>
        </image>
        <image name="gridpromoimage">
            <visible>false</visible>
        </image>   
    </view>    

    <view name="gamelist">
        <video name="gamelistBgVideo">
            <zIndex>2</zIndex>
            <audio>false</audio>
            <pos>0 0</pos>
            <cropSize>1 1</cropSize>
            <path>./_inc/systems/cabinets/1080p/console-bg.mp4</path> <!-- Path to the specific game video -->
            <zIndex>9</zIndex>
            <brightness>${vidBright}</brightness>
            <saturation>${vidSat}</saturation>
            <color>${vidColor}</color>
        </video>
        <image name="gameimage">
            <visible>false</visible>
        </image>
        <image name="imagethumb1">
            <visible>false</visible>
        </image>
         <image name="gamelistBgImage">
            <zIndex>1</zIndex>
            <pos>0 0</pos>
            <cropSize>1 1</cropSize>
            <path>./_inc/systems/cabinets/images/console-bg.webp</path> <!-- Path to the specific game video -->
            <zIndex>1</zIndex>
            <brightness>${vidBright}</brightness>
            <saturation>${vidSat}</saturation>
            <color>${vidColor}</color>
        </image>
        <image name="ListBgImage">   
            <visible>false</visible>
        </image>
        <text name="gameCount">
                <pos>0.6 0.6</pos>
             </text>
       </view> 
</theme>