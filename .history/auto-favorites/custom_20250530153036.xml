
<theme>
  <view name="gamelist">
    
    <image name="cabinetOverlay">
      <visible>false</visible>
    </image>
    
   <image name="sys-logo">
      <pos>0.63 0.006</pos>
      <maxSize>0.2 0.2</maxSize>
      <saturation>0</saturation>
      <brightness>2</brightness>
      <color>${highlightColor}</color>
      <path>./../_inc/systems/logos/${system.theme}.webp</path>
