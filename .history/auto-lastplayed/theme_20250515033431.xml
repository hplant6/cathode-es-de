<theme>
    <include>./../base.xml</include>
    

   <variant name="carousel-carousel-3D">
        <include>./../${performance}</include>
        <include>./../syscarousel.xml</include>
    </variant>
    <variant name="carousel-carousel">
        <include>./../${performance}</include>
        <include>./../syscarousel.xml</include>
    </variant>
    <variant name="carousel-grid">
        <include>./../${performance}</include>
        <include>./../syscarousel.xml</include>
    </variant>
    <variant name="carousel-list">
        <include>./../${performance}</include>
        <include>./../syscarousel.xml</include>
    </variant>
    <variant name="list-list">
        <include>./../${performance}</include>
        <include>./../syslist.xml</include>
    </variant> 
    <variant name="list-grid">
        <include>./../${performance}</include>
        <include>./../syslist.xml</include>
    </variant> 
    <variant name="list-carousel-3D">
        <include>./../${performance}</include>
        <include>./../syslist.xml.xml</include>
    </variant> 
    <variant name="list-carousel">
        <include>./../${performance}</include>
        <include>./../syslist.xml</include>
    </variant>
    <variant name="grid-grid">
        <include>./../${performance}</include>
        <include>./../sysgrid.xml</include>
    </variant> 
    <variant name="grid-carousel-3D">
        <include>./../${performance}</include>
        <include>./../sysgrid.xml</include>
    </variant> 
    <variant name="grid-carousel">
        <include>./../${performance}</include>
        <include>./../sysgrid.xml</include>
    </variant> 
    <variant name="grid-list">
        <include>./../${performance}</include>
        <include>./../sysgrid.xml</include>
    </variant>
    <variant name="low-power">
        <include>./../${performance}</include>
        <include>./../lowpower.xml</include>
    </variant>   

   <view name="gamelist">
        <image name="section-logo">
            <pos>0.01 0.03</pos>
            <maxSize>0.25 0.15</maxSize>
            <path>./../_inc/systems/logos/${system.theme}.webp</path>
            <default>./../_inc/systems/logos/default.webp</default>
            <color>${highlightColor}</color>
            <brightness>2</brightness>
            <saturation>0</saturation>
            <zIndex>6</zIndex>
        </image>
        <gamelistinfo name="gameCountN">
            <pos>${glistInfo}</pos>
            <origin>0 0</origin>
            <size>0.2 0.05</size>
            <fontSize>${paraFontSize}</fontSize>
            <fontPath>./../_inc/fonts/VCR_OSD_MONO.ttf</fontPath>
            <horizontalAlignment>left</horizontalAlignment>
            <color>${baseColor}</color>
        </gamelistinfo>
          <text name="developer">
            <pos>0.27 .045</pos>
            <origin>0 0.5</origin>
            <size>0.4 0.05</size>
            <fontSize>${titlelFontSize}</fontSize>
            <fontPath>./../_inc/fonts/road-rage.otf</fontPath>
            <metadata>sourceSystemName</metadata>
            <defaultValue>??</defaultValue>
            <color>${highlightColor}</color>
            <lineSpacing>1</lineSpacing>
            <zIndex>65</zIndex>
        </text>
        <text name="gamTitle">
            <pos>0.27 0.09</pos>
            <origin>0 0.5</origin>
            <size>.45 .030</size>
            <fontSize>${titlelFontSize}</fontSize>
            <fontPath>./../_inc/fonts/Oxanium-Regular.ttf</fontPath>
            <letterCase>uppercase</letterCase>
            <metadata>name</metadata>
            <systemNameSuffix>false</systemNameSuffix>
            <defaultValue>Unknown</defaultValue>
            <color>${transColor}</color>
            <lineSpacing>1</lineSpacing>
            <zIndex>65</zIndex>
        </text>

         <image name="line1">
            <pos>0.27 .12</pos>
            <origin>0 .5</origin>
            <maxSize>.7 .5</maxSize>
            <path>./../_inc/images/line.svg</path>
            <color>${baseColor}25</color>
            <zIndex>70</zIndex>
        </image>

         <rating name="ratinggraphic">
            <pos>.27 .15</pos>
            <origin>0 0.5</origin>
            <size>0 0.03</size>
            <filledPath>./../_inc/images/star_filled.svg</filledPath>
            <unfilledPath>./../_inc/images/star_unfilled.svg</unfilledPath>
            <color>${highlightColor}</color>
            <zIndex>65</zIndex>
        </rating>

        <image name="date-icon">
            <pos>0.37 .15</pos>
            <origin>0 .5</origin>
            <maxSize>.027 .027</maxSize>
            <path>./../_inc/images/release-date.svg</path>
            <color>${highlightColor}</color>
            <brightness>2</brightness>
            <saturation>0</saturation>
            <metadataElement>true</metadataElement>
            <zIndex>65</zIndex>
        </image>

        <datetime name="releasedatedate">
            <pos>.39 .15</pos>
            <origin>0 0.5</origin>
            <fontSize>${labelFontSize}</fontSize>
            <fontPath>./../_inc/fonts/Oxanium-Regular.ttf</fontPath>
            <letterCase>uppercase</letterCase>
            <format>%Y</format>
            <metadata>releasedate</metadata>
            <defaultValue>????</defaultValue>
            <color>${transColor}</color>
            <lineSpacing>1</lineSpacing>
            <zIndex>65</zIndex>
        </datetime>

        <text name="lastplayedtext">
            <pos>.77 .1</pos>
            <origin>0 0.5</origin>
            <size>0.1 0.05</size>
            <fontSize>${labelFontSize}</fontSize>
            <fontPath>./../_inc/fonts/Oxanium-Regular.ttf</fontPath>
            <letterCase>uppercase</letterCase>
            <horizontalAlignment>right</horizontalAlignment>
            <text>Last Played:</text>
            <color>${transColor}</color>
            <lineSpacing>1</lineSpacing>
            <zIndex>65</zIndex>
            <visible>${remove}</visible>
        </text>

        <datetime name="lastPlayedDate">
            <pos>${gridDate}</pos>
            <origin>0 0.5</origin>
            <size>0.25 0.2</size>
            <fontSize>${labelFontSize}</fontSize>
            <fontPath>./../_inc/fonts/Oxanium-Regular.ttf</fontPath>
            <letterCase>uppercase</letterCase>
            <horizontalAlignment>left</horizontalAlignment>
            <metadata>lastplayed</metadata>
            <defaultValue>unopened</defaultValue>
            <color>${transColor}</color>
            <lineSpacing>1</lineSpacing>
            <zIndex>65</zIndex>
            <visible>${remove}</visible>
        </datetime>
        <datetime name="MobilelastPlayed">
            <pos>0.78 .1</pos>
            <origin>0 0.5</origin>
            <size>0.25 0.2</size>
            <fontSize>${labelFontSize}</fontSize>
            <fontPath>./../_inc/fonts/Oxanium-Regular.ttf</fontPath>
            <letterCase>uppercase</letterCase>
            <horizontalAlignment>left</horizontalAlignment>
            <metadata>lastplayed</metadata>
            <defaultValue>unopened</defaultValue>
            <color>${transColor}</color>
            <lineSpacing>1</lineSpacing>
            <zIndex>65</zIndex>
            <visible>${mobileStat}</visible>
        </datetime>

        <badges name="badges">
            <pos>${gbadge}</pos>
            <origin>0 0</origin>
            <size>.25 .25</size>
            <horizontalAlignment>right</horizontalAlignment>
            <direction>row</direction>
            <lines>1</lines>
            <itemsPerLine>8</itemsPerLine>
            <slots>collection, folder, favorite, completed, kidgame, broken, altemulator, manual</slots>
            <badgeIconColor>cccccc</badgeIconColor>
            <customBadgeIcon badge="collection">./../_inc/images/badge-collection.svg</customBadgeIcon>
            <customBadgeIcon badge="folder">./../_inc/images/badge-folder.svg</customBadgeIcon>
            <customBadgeIcon badge="favorite">./../_inc/images/badge-favorite.svg</customBadgeIcon>
            <customBadgeIcon badge="completed">./../_inc/images/badge-completed.svg</customBadgeIcon>
            <customBadgeIcon badge="kidgame">./../_inc/images/badge-kidgame.svg</customBadgeIcon>
            <customBadgeIcon badge="broken">./../_inc/images/badge-broken.svg</customBadgeIcon>
            <customBadgeIcon badge="controller">./../_inc/images/badge-controller.svg</customBadgeIcon>
            <customBadgeIcon badge="altemulator">./../_inc/images/badge-altemulator.svg</customBadgeIcon>
            <customBadgeIcon badge="manual">./../_inc/images/badge-manual.svg</customBadgeIcon>
            <zIndex>65</zIndex>
        </badges>

        <image name="players-icon">
            <pos>0.425 0.15</pos>
            <origin>0 .5</origin>
            <maxSize>.027 .027</maxSize>
            <path>./../_inc/images/icon-players.svg</path>
            <color>${highlightColor}</color>
            <brightness>2</brightness>
            <saturation>0</saturation>
            <metadataElement>true</metadataElement>
            <zIndex>65</zIndex>
        </image>

        <text name="game-players">
            <pos>0.445 .15</pos>
            <origin>0 0.5</origin>
            <size>0.1 0.05</size>
            <fontSize>${labelFontSize}</fontSize>
            <fontPath>./../_inc/fonts/Oxanium-Regular.ttf</fontPath>
            <letterCase>uppercase</letterCase>
            <metadata>players</metadata>
            <defaultValue>??</defaultValue>
            <color>${transColor}</color>
            <lineSpacing>1</lineSpacing>
            <zIndex>65</zIndex>
        </text>

        <image name="genre-icon">
            <pos>0.475 0.15</pos>
            <origin>0 .5</origin>
            <maxSize>.027 .027</maxSize>
            <path>./../_inc/images/genre.svg</path>
            <color>${highlightColor}</color>
            <brightness>2</brightness>
            <saturation>0</saturation>
            <metadataElement>true</metadataElement>
            <zIndex>65</zIndex>
        </image>

         <text name="genre">
            <pos>0.495 .15</pos>
            <origin>0 0.5</origin>
            <size>0.3 0.05</size>
            <fontSize>${labelFontSize}</fontSize>
            <fontPath>./../_inc/fonts/Oxanium-Regular.ttf</fontPath>
            <letterCase>uppercase</letterCase>
            <metadata>genre</metadata>
            <defaultValue>??</defaultValue>
            <color>${transColor}</color>
            <lineSpacing>1</lineSpacing>
            <zIndex>65</zIndex>
        </text>
         
        <grid name="game-grid">
			<origin>0 0</origin> 
			<pos>.05 .19</pos>	
			<size>.98 .79</size>
            <itemSize>0.1 0.22</itemSize>
            <itemScale>1.2</itemScale>
            <itemSpacing>0.016 0.022</itemSpacing>
            <imageType>physicalmedia, cover</imageType>
            <defaultImage>./../_inc/images/default-box.webp</defaultImage>
            <defaultFolderImage>./../_inc/images/folder.webp</defaultFolderImage> 
			<scaleInwards>false</scaleInwards>
			<unfocusedItemDimming>0.4</unfocusedItemDimming>
            <unfocusedItemSaturation>0.7</unfocusedItemSaturation>
			<fontSize>${caraFontSize}</fontSize>
			<textColor>ffffff90</textColor>
            <fractionalRows>false</fractionalRows>
			<textRelativeScale>1</textRelativeScale>
			<textBackgroundColor>CCCCCC00</textBackgroundColor>
            <backgroundColor>00000000</backgroundColor>
            <zIndex>10</zIndex>
		</grid>
        <video name="videothumb">
            <pos>0 .19</pos>
            <cropSize>1 1</cropSize>
            <default>./../_inc/images/empty-state.mp4</default> <!-- Fallback to default cover -->
            <interpolation>nearest</interpolation>
            <pillarboxes>true</pillarboxes>
            <pillarboxThreshold>0.85 0.90</pillarboxThreshold>
            <delay>0</delay>
            <opacity>.16</opacity>
            <fadeInTime>0</fadeInTime>
            <zIndex>2</zIndex>
        </video>
        
        <video name="gridBgVideo">
            <audio>false</audio>
            <pos>0 .19</pos>
            <cropSize>1 1</cropSize>
            <path>./../_inc/images/grid-bg.mp4</path> <!-- Path to the specific game video -->
            <zIndex>2</zIndex>
            <brightness>${vidBright}</brightness>
            <saturation>${vidSat}</saturation>
            <color>${vidColor}</color>
        </video>
        <image name="gridBgImage">
            <pos>0 .19</pos>
            <cropSize>1 1</cropSize>
            <path>./../_inc/images/grid-bg.webp</path>
            <zIndex>1</zIndex>
            <brightness>${vidBright}</brightness>
            <saturation>${vidSat}</saturation>
            <color>${vidColor}</color>
        </image>
        <helpsystem name="help">
            <entries>a, b, x, y, lt, rt</entries>
        </helpsystem>
        <video name="gamelistBgVideo">
            <visible>false</visible>
        </video>
        <image name="gamelistBgImage">
            <visible>false</visible>
        </image>  
    </view>
    <view name="system">   
        <text name="system-description">
             <visible>false</visible>
         </text>      
         <image name="system-controllers-outline">
                <visible>false</visible>
         </image>
         <image name="sel-gamart">
                <visible>false</visible>
         </image>
         <text name="gameCountL">
               <visible>false</visible>
        </text>
        <text name="gameCount">
               <visible>false</visible>
        </text>
    </view>
    <aspectRatio name="4:3">
        <view name="gamelist">
            <image name="date-icon">
                <pos>0.4 .15</pos>
            </image>

            <datetime name="releasedatedate">
                <pos>.42 .15</pos>
            </datetime>

            <image name="players-icon">
                <pos>0.475 0.15</pos>
            </image>

            <text name="game-players">
                <pos>0.491 .15</pos>
            </text>

            <image name="genre-icon">
                <pos>0.525 0.15</pos>
            </image>

            <text name="genre">
                <pos>0.545 .15</pos>
            </text>
        </view>
  </aspectRatio>
  <aspectRatio name="3:2">
        <view name="gamelist">
            <image name="date-icon">
                <pos>0.4 .15</pos>
            </image>

            <datetime name="releasedatedate">
                <pos>.42 .15</pos>
            </datetime>

            <image name="players-icon">
                <pos>0.475 0.15</pos>
            </image>

            <text name="game-players">
                <pos>0.491 .15</pos>
            </text>

            <image name="genre-icon">
                <pos>0.525 0.15</pos>
            </image>

            <text name="genre">
                <pos>0.545 .15</pos>
            </text>
        </view>
  </aspectRatio>
  <aspectRatio name="16:10">
        <view name="gamelist">
           <image name="date-icon">
                <pos>0.39 .15</pos>
            </image>

            <datetime name="releasedatedate">
                <pos>.41 .15</pos>
            </datetime>

            <image name="players-icon">
                <pos>0.465 0.15</pos>
            </image>

            <text name="game-players">
                <pos>0.481 .15</pos>
            </text>

            <image name="genre-icon">
                <pos>0.515 0.15</pos>
            </image>

            <text name="genre">
                <pos>0.535 .15</pos>
            </text>
        </view>
  </aspectRatio>
  <aspectRatio name="21:9">
        <view name="gamelist">
           <image name="date-icon">
                <pos>0.35 .15</pos>
            </image>

            <datetime name="releasedatedate">
                <pos>.365 .15</pos>
            </datetime>

            <image name="players-icon">
                <pos>0.40 0.15</pos>
            </image>

            <text name="game-players">
                <pos>0.413 .15</pos>
            </text>

            <image name="genre-icon">
                <pos>0.435 0.15</pos>
            </image>

            <text name="genre">
                <pos>0.45 .15</pos>
            </text>
            <badges name="badges">
                <pos>0.527 .04</pos>
            </badges>
        </view>
  </aspectRatio>           
        
</theme>