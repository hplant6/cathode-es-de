<theme>
    <include>./${performance}</include>
    <variables>
        <metasize>.04</metasize>
    </variables>


   <view name="gamelist">
       <carousel name="gamelistCarousel">
                <pos>0.5 1.22</pos>
                <origin>0.5 1</origin>
                <size>1 0.7</size>
                <type>horizontal</type>
                <imageType>3dbox, cover</imageType>
                <defaultImage>./_inc/images/default3d-box.webp</defaultImage>
                <defaultFolderImage>./_inc/images/folder.webp</defaultFolderImage> 
                <maxItemCount>8</maxItemCount>
                <itemSize>0.12 0.25</itemSize>
                <itemScale>1.6</itemScale>
                <imageInterpolation>linear</imageInterpolation>
                <itemAxisHorizontal>true</itemAxisHorizontal>
                <itemHorizontalAlignment>bottom</itemHorizontalAlignment>
                <itemVerticalAlignment>bottom</itemVerticalAlignment>
                <fastScrolling>true</fastScrolling>
                <color>00000000</color>
                <textColor>${transColor}</textColor>
                <textBackgroundColor>000000FF</textBackgroundColor>
                <fontSize>${caraFontSize}</fontSize>
                <fontPath>${labelFont}</fontPath>
                <letterCase>uppercase</letterCase>
                <lineSpacing>1.2</lineSpacing>
                <selectedItemMargins>0.03 0.03</selectedItemMargins>
                <horizontalOffset>-0.405</horizontalOffset>
                <verticalOffset>.2</verticalOffset>
                <reflections>true</reflections>
                <reflectionsOpacity>.25</reflectionsOpacity>
                <reflectionsFalloff>3</reflectionsFalloff>
                <unfocusedItemOpacity>1</unfocusedItemOpacity>
                <zIndex>50</zIndex>
        </carousel>
    
  <video name="gamevideo">
            <pos>0.77 0.38</pos>
            <cropSize>0.25 0.32</cropSize>
            <cropPos>0 .5</cropPos>
            <origin>0.5 0.5</origin>
            <imageType>screenshot, titlescreen, cover</imageType> <!-- Dynamically fetch media -->
            <default>./_inc/images/empty-state43.mp4</default> <!-- Fallback to default cover -->
            <interpolation>nearest</interpolation>
            <pillarboxes>true</pillarboxes>
            <pillarboxThreshold>0.85 0.90</pillarboxThreshold>
            <delay>0</delay>
            <fadeInTime>0</fadeInTime>
            <zIndex>30</zIndex>
        </video>
    <image name="gameimage">
            <pos>0.77 0.38</pos>
            <cropSize>0.25 0.32</cropSize>
            <cropPos>0 .5</cropPos>
            <origin>0.5 0.5</origin>
            <imageType>screenshot, fanart, titlescreen, cover</imageType> <!-- Dynamically fetch media -->
            <default>./_inc/images/empty-state.webp</default> <!-- Fallback to default cover -->
            <zIndex>29</zIndex>
        </image> 
        
    <image name="cabinetOverlay">
      <brightness>${vidBright}</brightness>
      <saturation>${vidSat}</saturation>
      <color>${vidColor}</color>
      <pos>0 0</pos>
      <cropSize>1 1</cropSize>
      <path>./_inc/images/allgames-overlay.webp</path>
      <zIndex>70</zIndex>
    </image>
    <image name="sys-logo">
      <pos>0.58 0.02</pos>
      <maxSize>0.22 0.22</maxSize>
      <saturation>0</saturation>
      <brightness>2</brightness>
      <color>${highlightColor}</color>
      <path>./_inc/systems/logos/${system.theme}.webp</path>
      <default>./_inc/systems/logos/default.webp</default>
      <zIndex>14</zIndex>
    </image>
    <datetime name="mobile-stat">
        <pos>.783 .09</pos>            
    </datetime>
    <text name="mobile-stat-title">
        <pos>.78 .06</pos>
    </text>

    <text name="lastPlayed">
        <pos>.77 .06</pos>           
    </text>
    <datetime name="lastPlayedDate">    
        <pos>.873 .06</pos>            
    </datetime>
    <text name="playcount">
        <pos>.77 .08</pos>
    </text>
    <datetime name="mobile-stat">
        <pos>.783 .087</pos>            
    </datetime>
    <text name="mobile-stat-title">
        <pos>.783 .062</pos>          
    </text>
    <text name="pkaycountnumber">    
         <pos>.873 .08</pos>
    </text>
    <text name="kidgameLabel">
        <pos>.77 .1</pos>
    </text>
    <text name="kidgame">
        <pos>.873 .1</pos>           
    </text> 

    <video name="gamelistBgVideo">
            <audio>false</audio>
      <pos>0 0</pos>
      <cropSize>1 1</cropSize>
      <path>./_inc/systems/cabinets/1080p/auto-allgames.mp4</path>
      <zIndex>9</zIndex>
    </video>
   <image name="gamelistBgImage">
      <pos>0 0</pos>
      <cropSize>1 1</cropSize>
      <path>./_inc/systems/cabinets/images/auto-allgames.webp</path> 
      <zIndex>8</zIndex>
      <brightness>${vidBright}</brightness>
      <saturation>${vidSat}</saturation>
      <color>${vidColor}</color>
    </image>
