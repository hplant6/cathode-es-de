<theme>

    <variables>
        
        <systemPromoImage>./_inc/systems/system-view/images/${system.theme}.webp</systemPromoImage>   
    </variables>

    <view name="system">
        <image name="backgroundpromo">
            <pos>0 0</pos>
            <cropSize>1 1</cropSize>
            <path>./_inc/systems/system-view/images/${system.theme}.webp</path> 
            <default>./_inc/systems/system-view/images/default.webp</default> 
            <zIndex>2</zIndex>
        </image>
        <video name="gridpromo">
            <visible>false</visible>  
        </video>
        <animation name="hud-ele">
            <visible>false</visible>  
        </animation>
        <video name="lowpromo">
            <path>${consoleVid}</path>
            <visible>false</visible> 
        </video>
        <image name="lowpromoimg">
            <path>${consoleImg}</path> 
            <visible>false</visible> 
        </image>         
    </view>    

    <view name="gamelist">
        <video name="gamelistBgVideo">
            <visible>false</visible>
        </video>
        
        <video name="gamevideo">
            <visible>false</visible>
        </video>
        <video name="videothumb1">
            <visible>false</visible>
        </video>
         <image name="gamelistBgImage">
            <pos>0 0</pos>
            <cropSize>1 1</cropSize>
            <path>./_inc/systems/cabinets/images/console-bg.webp</path>
            <zIndex>1</zIndex>
            <brightness>${vidBright}</brightness>
            <saturation>${vidSat}</saturation>
            <color>${vidColor}</color>
        </image>
        <video name="nut">
            <visible>false</visible>
        </video>
        <video name="ListBgVideo">
            <visible>flase</visible> 
        </video>
        <video name="gridBgVideo">
            <visible>flase</visible> 
        </video>
    </view>
        
</theme>