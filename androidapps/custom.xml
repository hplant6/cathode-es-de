<!--
   CATHODE

 (cathode-es-de) Theme by Henry P.

-->

<theme>
    <view name="gamelist">
             <video name="nut">
                    <audio>false</audio>
                    <pos>0.77 0.38</pos>
                    <maxSize>0.4 0.4</maxSize>
                    <origin>0.5 0.5</origin>
                    <path>./../_inc/images/nut.mp4</path> <!-- Fallback to default cover -->
                    <interpolation>nearest</interpolation>
                    <pillarboxThreshold>0.85 0.90</pillarboxThreshold>
                    
                    <zIndex>30</zIndex>
            </video>
            <image name="nutimg">
                    <pos>0.77 0.38</pos>
                    <maxSize>0.4 0.4</maxSize>
                    <origin>0.5 0.5</origin>
                    <path>./../_inc/images/nut.jpg</path> <!-- Fallback to default cover -->
                    <zIndex>30</zIndex>
            </image>
            <video name="gamelistBgVideo">
                    <audio>false</audio>
                    <pos>0 0</pos>
                    <cropSize>1 1</cropSize>
                    <path>./../_inc/systems/cabinets/1080p/android.mp4</path> 
                    <zIndex>9</zIndex>
                    <brightness>${vidBright}</brightness>
                    <saturation>${vidSat}</saturation>
                    <color>${vidColor}</color>
            </video>
            <text name="appTitle">
                <pos>.02 .3</pos>
                <origin>0 .5</origin>
                <size>.5 .15</size>
                <fontSize>.12</fontSize>
                <fontPath>./.${labelFont}</fontPath>
                <letterCase>uppercase</letterCase>
                <metadata>name</metadata>
                <defaultValue>Unknown</defaultValue>
                <color>${baseColor}</color>
                <lineSpacing>1</lineSpacing>
                <zIndex>65</zIndex>
            </text>
            <text name="meta">
                <pos>.025 .4</pos>
                <origin>0 .5</origin>
                <fontSize>${labelFontSize}</fontSize>
                <fontPath>./.${labelFont}</fontPath>
                <letterCase>uppercase</letterCase>
                <metadata>physicalNameExtension</metadata>
                <color>${baseColor}</color>
                <lineSpacing>1</lineSpacing>
                <zIndex>65</zIndex>
            </text>
            <image name="line">
                <pos>0.02 .367</pos>
                <origin>0 .5</origin>
                <maxSize>.45 .9</maxSize>
                <path>./../_inc/images/line.svg</path>
                <color>${lineColor}</color>
                <zIndex>70</zIndex>
            </image>
            <image name="gamelistBgImage">
                <pos>0 0</pos>
                <cropSize>1 1</cropSize>
                <path>./../_inc/systems/cabinets/images/android.webp</path> 
                <zIndex>8</zIndex>
                <brightness>${vidBright}</brightness>
                <saturation>${vidSat}</saturation>
                <color>${vidColor}</color>
            </image>
             <image name="section-logo">
                <pos>-.05 0.02</pos>
                <maxSize>0.25 0.17</maxSize>
                <path>./../_inc/systems/logos/${system.theme}.webp</path>
                <default>./../_inc/systems/logos/default.webp</default>
                <color>${highlightColor}</color>
                <brightness>2</brightness>
                <saturation>0</saturation>
                <zIndex>14</zIndex>
            </image>
            <!--
            <carousel name="main">
                    <origin>0 0</origin>
                    <pos>0 0</pos>	
                    <size>1 .9</size>
                    <itemSize>.2 0.1</itemSize> 
                    <fontPath>./../_inc/fonts/VCR_OSD_MONO.ttf</fontPath>
                    <imageType>none</imageType>
                    <itemScale>3</itemScale>
                    <unfocusedItemOpacity>1</unfocusedItemOpacity>
                    <type>vertical</type>
                    <textColor>${transColor}</textColor>
                    <lineSpacing>1</lineSpacing>
                    <selectedItemOffset>0 0</selectedItemOffset> 
                    <selectedItemMargins>0.5 .1</selectedItemMargins>
                    <maxItemCount>12</maxItemCount>
                    <itemHorizontalAlignment>left</itemHorizontalAlignment>
                    <color>00000000</color>
                    <itemAxisRotation>0</itemAxisRotation>
                    <itemDiagonalOffset>0</itemDiagonalOffset>
                    <horizontalOffset>.25</horizontalOffset>
                    <verticalOffset>-.24</verticalOffset>
            </carousel>
            -->
            <carousel name="gamelistCarousel">
                <pos>0.5 1.22</pos>
                <origin>0.5 1</origin>
                <size>1 0.7</size>
                <type>horizontal</type>
                <imageType>3dbox, cover</imageType>
                <defaultImage>./../_inc/images/android-box.webp</defaultImage>
                <defaultFolderImage>./../_inc/images/folder.webp</defaultFolderImage> 
                <maxItemCount>8</maxItemCount>
                <itemSize>0.12 0.25</itemSize>
                <itemScale>1.6</itemScale>
                <imageInterpolation>linear</imageInterpolation>
                <itemAxisHorizontal>true</itemAxisHorizontal>
                <itemHorizontalAlignment>bottom</itemHorizontalAlignment>
                <itemVerticalAlignment>bottom</itemVerticalAlignment>
                <fastScrolling>true</fastScrolling>
                <color>00000000</color>
                <textColor>${transColor}</textColor>
                <textBackgroundColor>000000FF</textBackgroundColor>
                <fontSize>${caraFontSize}</fontSize>
                <fontPath>${labelFont}</fontPath>
                <letterCase>uppercase</letterCase>
                <lineSpacing>1.2</lineSpacing>
                <selectedItemMargins>0.03 0.03</selectedItemMargins>
                <horizontalOffset>-0.405</horizontalOffset>
                <verticalOffset>.2</verticalOffset>
                <reflections>true</reflections>
                <reflectionsOpacity>.25</reflectionsOpacity>
                <reflectionsFalloff>3</reflectionsFalloff>
                <unfocusedItemOpacity>1</unfocusedItemOpacity>
                <zIndex>50</zIndex>
        </carousel>
    </view>
     <aspectRatio name="4:3">
        <view name="gamelist">
            <video name="gamelistBgVideo">
                <audio>false</audio>
                <cropPos>.6 0</cropPos>
            </video>
            <image name="gamelistBgImage">
                <cropPos>.6 0</cropPos>
            </image>
            
            <video name="nut">
                <pos>0.835 0.385</pos>
                <maxSize>0.56 0.43</maxSize>
            </video>
            <image name="nutimg">
                <pos>0.835 0.385</pos>
                <maxSize>0.56 0.43</maxSize>
            </image>
        </view>
    </aspectRatio>
    <aspectRatio name="16:10">
        <view name="gamelist">
            <video name="nut">
                <pos>0.8 0.383</pos>
                <maxSize>0.46 0.43</maxSize>
            </video>
            <image name="nutimg">
                <pos>0.8 0.383</pos>
                <maxSize>0.46 0.43</maxSize>
            </image>
       </view>
    </aspectRatio>
          
</theme>       