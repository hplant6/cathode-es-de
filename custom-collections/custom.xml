                    <default>./../_inc/systems/logos/default.webp</default>
                    <zIndex>71</zIndex>
                </image>
                
                <gamelistinfo name="gcount">
                    <origin>.5 0</origin>
                    <pos>0.5 .16</pos>
                    <size>1 .03</size>
                    <color>${highlightColor}</color>
