<!--
   CATHODE

 (cathode-es-de) Theme by Henry P.

-->

<theme>


    <view name="system">   
         
        <text name="system-description">
             <visible>false</visible>
         </text>      
         <image name="system-controllers-outline">
                <visible>false</visible>
         </image>
         <image name="sel-gamart">
                <visible>false</visible>
         </image>
         <text name="gameCountL">
               <visible>false</visible>
        </text>
        <text name="gameCount">
               <visible>false</visible>
        </text>
        
    </view>        
    <view name="gamelist">
        <video name="gamelistBgVideo">
            <audio>false</audio>
            <pos>0 0</pos>
            <cropSize>1 1</cropSize>
            <path>./../_inc/images/custom-bg.mp4</path> <!-- Path to the specific game video -->
            <zIndex>5</zIndex>
        </video>
        <image name="gamelistBgImage">
            <pos>0 0</pos>
            <cropSize>1 1</cropSize>
            <path>./../_inc/images/custom-bg.webp</path> <!-- Path to the specific game video -->
            <zIndex>4</zIndex>
        </image>
        <textlist name="sys-list">
            <origin>0 0</origin>
            <pos>0.06 .28</pos>
            <size>.31 .55</size>
            <fontPath>./../_inc/fonts/VCR_OSD_MONO.ttf</fontPath>
            <selectorColor>ffffff20</selectorColor>
            <fontSize>0.03</fontSize>
            <selectorHeight>0.001</selectorHeight>
            <horizontalAlignment>right</horizontalAlignment>
            <textHorizontalScrollDelay>1</textHorizontalScrollDelay>
            <lineSpacing>1.5</lineSpacing>
            <letterCase>uppercase</letterCase>
            <selectorVerticalOffset>.043</selectorVerticalOffset>
            <primaryColor>FFFFFF80</primaryColor>
            <secondaryColor>FFFFFF50</secondaryColor>
            <selectedColor>FFFFFF</selectedColor>
            <indicators>ascii</indicators>
         </textlist>   
         <video name="gamevideo">
            <pos>0.65 0.55</pos>
            <cropSize>0.52 0.52</cropSize>
            <origin>0.5 0.5</origin>
            <default>./../_inc/images/empty-state.mp4</default> <!-- Fallback to default cover -->
            <interpolation>nearest</interpolation>
            <pillarboxes>false</pillarboxes>
            <delay>0</delay>
            <opacity>.6</opacity>
            <fadeInTime>0</fadeInTime>
            <zIndex>7</zIndex>
        </video>
        <image name="gameimage">
            <pos>0.65 0.55</pos>
            <cropSize>0.52 0.52</cropSize>
            <origin>0.5 0.5</origin>
            <imageType>screenshot, titlescreen, cover</imageType> <!-- Dynamically fetch media -->
            <default>./../_inc/images/empty-state.webp</default> <!-- Fallback to default cover -->
            <opacity>.6</opacity>
            <zIndex>6</zIndex>
        </image>
        <text name="collection-name">
            <pos>0.5 .24</pos>
            <origin>0.5 0</origin>
            <horizontalAlignment>center</horizontalAlignment>
            <letterCase>uppercase</letterCase>
            <fontSize>${titlemFontSize}</fontSize>
            <fontPath>./../_inc/fonts/VCR_OSD_MONO.ttf</fontPath>
            <metadata>systemName</metadata>
            <defaultValue>Select a collection</defaultValue> 
            <color>FFFFFF90</color>
            <lineSpacing>1.5</lineSpacing>
            <zIndex>65</zIndex>
        </text>
        <text name="gamesys">
            <size>.22 .02</size>
            <pos>0.445 .33</pos>
            <letterCase>uppercase</letterCase>
            <fontSize>${paraFontSize}</fontSize>
            <fontPath>./../_inc/fonts/VCR_OSD_MONO.ttf</fontPath>
            <metadata>sourceSystemName</metadata>
            <defaultValue>System undefined</defaultValue> 
            <color>FFFFFF</color>
            <lineSpacing>1.5</lineSpacing>
            <zIndex>65</zIndex>
            <visible>${remove}</visible>
        </text>
        <text name="gamesystxt">
            <size>.22 .02</size>
            <pos>0.41 .33</pos>
            <letterCase>uppercase</letterCase>
            <fontSize>${paraFontSize}</fontSize>
            <fontPath>./../_inc/fonts/VCR_OSD_MONO.ttf</fontPath>
            <text>System:</text>
            <color>FFFFFF</color>
            <backgroundColor>00000099</backgroundColor>
            <lineSpacing>1.5</lineSpacing>
            <zIndex>64</zIndex>
            <visible>${remove}</visible>
        </text>
        <text name="gameplayers">
            <size>.22 .02</size>
            <pos>0.45 .353</pos>
            <letterCase>uppercase</letterCase>
            <fontSize>${paraFontSize}</fontSize>
            <fontPath>./../_inc/fonts/VCR_OSD_MONO.ttf</fontPath>
            <metadata>players</metadata>
            <defaultValue>unknown</defaultValue> 
            <color>FFFFFF</color>
            <lineSpacing>1.5</lineSpacing>
            <zIndex>65</zIndex>
            <visible>${remove}</visible>
        </text>
        <text name="gameplayerstxt">
            <size>.22 .02</size>
            <pos>0.41 .353</pos>
            <letterCase>uppercase</letterCase>
            <fontSize>${paraFontSize}</fontSize>
            <fontPath>./../_inc/fonts/VCR_OSD_MONO.ttf</fontPath>
            <text>Players:</text> 
            <color>FFFFFF</color>
            <backgroundColor>00000099</backgroundColor>
            <lineSpacing>1.5</lineSpacing>
            <zIndex>64</zIndex>
            <visible>${remove}</visible>
        </text>
        <text name="gamerating">
            <size>.22 .02</size>
            <pos>0.445 .375</pos>
            <letterCase>uppercase</letterCase>
            <fontSize>${paraFontSize}</fontSize>
            <fontPath>./../_inc/fonts/VCR_OSD_MONO.ttf</fontPath>
            <metadata>rating</metadata>
            <defaultValue>unknown</defaultValue> 
            <color>FFFFFF</color>
            <lineSpacing>1.5</lineSpacing>
            <zIndex>65</zIndex>
            <visible>${remove}</visible>
        </text>
        <text name="gameratingtxt">
            <size>.22 .02</size>
            <pos>0.41 .375</pos>
            <letterCase>uppercase</letterCase>
            <fontSize>${paraFontSize}</fontSize>
            <fontPath>./../_inc/fonts/VCR_OSD_MONO.ttf</fontPath>
            <text>Rating:</text> 
            <color>FFFFFF</color>
            <backgroundColor>00000099</backgroundColor>
            <lineSpacing>1.5</lineSpacing>
            <zIndex>64</zIndex>
            <visible>${remove}</visible>
        </text>
        <text name="gamedev">
            <size>.22 .02</size>
            <pos>0.46 .397</pos>
            <letterCase>uppercase</letterCase>
            <fontSize>${paraFontSize}</fontSize>
            <fontPath>./../_inc/fonts/VCR_OSD_MONO.ttf</fontPath>
            <metadata>developer</metadata>
            <defaultValue>developer undefined</defaultValue> 
            <color>FFFFFF</color>
            <lineSpacing>1.5</lineSpacing>
            <zIndex>65</zIndex>
            <visible>${remove}</visible>
        </text>
        <text name="gamedevtxt">
            <size>.22 .02</size>
            <pos>0.41 .397</pos>
            <letterCase>uppercase</letterCase>
            <fontSize>${paraFontSize}</fontSize>
            <fontPath>./../_inc/fonts/VCR_OSD_MONO.ttf</fontPath>
            <text>Developer:</text> 
            <color>FFFFFF</color>
            <backgroundColor>00000099</backgroundColor>
            <lineSpacing>1.5</lineSpacing>
            <zIndex>64</zIndex>
            <visible>${remove}</visible>
        </text>
        <datetime name="releasedatedate">
            <size>.22 .02</size>
            <pos>.436 .42</pos>
            <fontSize>${paraFontSize}</fontSize>
            <fontPath>./../_inc/fonts/VCR_OSD_MONO.ttf</fontPath>
            <letterCase>uppercase</letterCase>
            <format>%Y</format>
            <metadata>releasedate</metadata>
            <defaultValue>Release date unknown</defaultValue>
            <color>FFFFFF</color>
            <lineSpacing>1</lineSpacing>
            <zIndex>65</zIndex>
            <visible>${remove}</visible>
        </datetime>
        <text name="gamedatetxt">
            <size>.22 .02</size>
            <pos>0.41 .42</pos>
            <letterCase>uppercase</letterCase>
            <fontSize>${paraFontSize}</fontSize>
            <fontPath>./../_inc/fonts/VCR_OSD_MONO.ttf</fontPath>
            <text>Date:</text> 
            <color>FFFFFF</color>
            <backgroundColor>00000099</backgroundColor>
            <lineSpacing>1.5</lineSpacing>
            <zIndex>64</zIndex>
            <visible>${remove}</visible>
        </text>
        <text name="gamegenre">
            <size>.22 .02</size>
            <pos>0.44 .443</pos>
            <letterCase>uppercase</letterCase>
            <fontSize>${paraFontSize}</fontSize>
            <fontPath>./../_inc/fonts/VCR_OSD_MONO.ttf</fontPath>
            <metadata>genre</metadata>
            <defaultValue>developer undefined</defaultValue> 
            <color>FFFFFF</color>
            <lineSpacing>1.5</lineSpacing>
            <zIndex>65</zIndex>
            <visible>${remove}</visible>
        </text>
        <text name="gamegenretxt">
           <size>.22 .02</size>
            <pos>0.41 .443</pos>
            <letterCase>uppercase</letterCase>
            <fontSize>${paraFontSize}</fontSize>
            <fontPath>./../_inc/fonts/VCR_OSD_MONO.ttf</fontPath>
            <text>Genre:</text> 
            <color>FFFFFF</color>
            <backgroundColor>00000099</backgroundColor>
            <lineSpacing>1.5</lineSpacing>
            <zIndex>64</zIndex>
            <visible>${remove}</visible>
        </text>

        

        <text name="gameemulator">
            <size>.22 .02</size>
            <pos>0.455 .466</pos>
            <letterCase>uppercase</letterCase>
            <fontSize>${paraFontSize}</fontSize>
            <fontPath>./../_inc/fonts/VCR_OSD_MONO.ttf</fontPath>
            <metadata>emulator</metadata>
            <defaultValue>emulator</defaultValue> 
            <color>FFFFFF</color>
            <lineSpacing>1.5</lineSpacing>
            <zIndex>65</zIndex>
            <visible>${remove}</visible>
        </text>
        <text name="gameemulatortxt">
            <size>.22 .02</size>
            <pos>0.41 .466</pos>
            <letterCase>uppercase</letterCase>
            <fontSize>${paraFontSize}</fontSize>
            <fontPath>./../_inc/fonts/VCR_OSD_MONO.ttf</fontPath>
            <text>Emulator:</text> 
            <color>FFFFFF</color>
            <backgroundColor>00000099</backgroundColor>
            
            <lineSpacing>1.5</lineSpacing>
            <zIndex>64</zIndex>
            <visible>${remove}</visible>
        </text>
        
        <text name="gameinfo">
            <size>.22 .2</size>
            <pos>0.41 .51</pos>
            <fontSize>${paraFontSize}</fontSize>
            <fontPath>./../_inc/fonts/VCR_OSD_MONO.ttf</fontPath>
            <metadata>description</metadata>
            <defaultValue>a very interesting collection</defaultValue> 
            <color>FFFFFF</color>
            <container>true</container>
            <backgroundColor>00000095</backgroundColor>
            <backgroundMargins>0.5 0.2</backgroundMargins>
            <lineSpacing>1.5</lineSpacing>
            <zIndex>65</zIndex>
            <visible>${remove}</visible>
        </text>
        
        <text name="custom-title">
            <pos>0.5 .16</pos>
            <origin>0.5 0</origin>
            <fontSize>.05</fontSize>
            <horizontalAlignment>center</horizontalAlignment>
            <fontPath>./../_inc/fonts/VCR_OSD_MONO.ttf</fontPath>
            <letterCase>uppercase</letterCase>
            <text>Custom Collections</text>
            <color>FFFFFF</color>
            <lineSpacing>1</lineSpacing>
            <zIndex>65</zIndex>
        </text>
        <gameselector name="gselect">
            <selection>random</selection>
            <gameCount>10</gameCount>
        </gameselector>  

         <helpsystem name="help">
            <entries>a, b, x, y, lt, rt</entries>
        </helpsystem>
            
    </view>
     <aspectRatio name="4:3">
        <view name="gamelist">
            <image name="section-logo">
                <pos>0.01 0.06</pos>
                <size>0.25 0.1</size> <!-- +.1 0-->
            </image>    
            <text name="lastplayedtext">
                <pos>.76 .1</pos> <!-- -.1 0-->
            </text>
            <image name="date-icon">
                <pos>0.4 .15</pos> <!-- +.04 0-->
            </image>
            <datetime name="releasedatedate">
                <pos>.43 .15</pos> <!-- +.04 0-->
            </datetime>    
            <image name="players-icon">
                <pos>0.465 0.15</pos> <!-- +.04 0-->
            </image>      
            <text name="game-players">
                <pos>0.49 .15</pos> <!-- +.045 0-->
            </text>
            <image name="genre-icon">
                <pos>0.515 0.15</pos> <!-- +.04 0-->
            </image>
            <text name="genre">
                <pos>0.545 .15</pos> <!-- +.045 0-->
            </text> 
            <badges name="badges">
                <pos>0.72 .051</pos>
            </badges>
            <text name="lastplayedtext">
                <visible>false</visible>
            </text>

            <datetime name="lastPlayedDate">
                <visible>false</visible>
            </datetime>
            <gamelistinfo name="gameCountN">
                <visible>false</visible>
            </gamelistinfo>             
        </view>
    </aspectRatio>
     <aspectRatio name="21:9">
        <view name="gamelist">
             	            
        </view>
    </aspectRatio>
    <aspectRatio name="5:3_vertical">
           
            <view name="gamelist">
                <text name="collection-name">
                    <pos>0.5 .62</pos>
                    <fontSize>${titlemFontSize}</fontSize>
                </text>
                <textlist name="sys-list">
                    <origin>0 0</origin>
                    <pos>0.03 .65</pos>
                    <size>.97 .3</size>
                    <selectorVerticalOffset>.025</selectorVerticalOffset>
                    <horizontalAlignment>left</horizontalAlignment>
                </textlist> 
                <video name="gamelistBgVideo">
                    <pos>-.1 .191</pos>
                    <size>1.2 .42</size>
                    <cropSize>1 1</cropSize>
                </video>
                <image name="gamelistBgImage">
                    <pos>-.1 .191</pos>
                    <size>1.2 .42</size>
                    <cropSize>1 1</cropSize>
                </image>
                <video name="gamevideo">
                    <pos>.5 0.26</pos>
                    <origin>0.5 0</origin>
