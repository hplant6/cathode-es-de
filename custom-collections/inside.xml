<theme>

     <include>./../base.xml</include>

    <variant name="1080p-Video">
        <include>./../${performance}</include>
        <include>./../syscarousel.xml</include>
    </variant>
    <variant name="Still-images">
        <include>./../${performance}</include>
        <include>./../syscarousel.xml</include>
    </variant>
    <variant name="list-gamelist">
        <include>./../${performance}</include>
        <include>./../syslist.xml</include>
    </variant>
    <variant name="grid-gamelist">
        <include>./../${performance}</include>
        <include>./../sysgrid.xml</include>
    </variant>   

    <include>./../list.xml</include>
            
    <view name="system">  
            <image name="system-controllers-outline">
                <visible>false</visible>
            </image>
             <image name="customlogo">
                <pos>0.3 .35</pos>
                <origin>0 0</origin>
                <maxSize>.4 .4</maxSize>
                <path>./replace_me.webp</path>
                <zIndex>20</zIndex>
             </image>
             <text name="gameCount">
                <pos>0.6 0.65</pos>
                <opacity>.8</opacity>
                <zIndex>20</zIndex>
             </text>
             <video name="backgroundpromo">
                <audio>false</audio>
                <zIndex>1</zIndex>
            </video> 
        
        <text name="system-description">
             <pos>0.5 0.92</pos>  
         </text>      
         <image name="system-controllers-outline">
                <visible>false</visible>
         </image>
         <image name="sel-gamart">
                <visible>false</visible>
         </image>
         <text name="gameCountL">
               <visible>false</visible>
        </text>
    </view>      
    <view name="gamelist">      
         <image name="gamelistBgImage">
            <visible>false</visible>
         </image> 
         <video name="gamelistBgVideo">
            <audio>false</audio>
            <visible>false</visible>
         </video>   
    </view>   
</theme>