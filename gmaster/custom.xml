<theme>
  <view name="gamelist">
   <video name="gamevideo">
            <pos>0.757 0.36</pos>
            <maxSize>0.24 0.24</maxSize>
            <origin>0.5 0.5</origin>
            <imageType>screenshot, titlescreen, cover</imageType> <!-- Dynamically fetch media -->
            <default>./../_inc/images/green-no-media.mp4</default> <!-- Fallback to default cover -->
            <interpolation>nearest</interpolation>
            <pillarboxes>true</pillarboxes>
            <pillarboxThreshold>0.85 0.90</pillarboxThreshold>
            <delay>0</delay>
            <fadeInTime>0</fadeInTime>
            <zIndex>30</zIndex>
    </video>
    <video name="gamelistBgVideo">
            <audio>false</audio>
      <pos>0 0</pos>
      <cropSize>1 1</cropSize>
      <path>./../_inc/systems/cabinets/1080p/${system.theme}.mp4</path> 
      <zIndex>9</zIndex>
      <brightness>${vidBright}</brightness>
      <saturation>${vidSat}</saturation>
      <color>${vidColor}</color>
    </video>
    <image name="gamelistBgImage">
      <pos>0 0</pos>
      <cropSize>1 1</cropSize>
      <path>./../_inc/systems/cabinets/images/${system.theme}.webp</path> 
      <zIndex>8</zIndex>
      <brightness>${vidBright}</brightness>
      <saturation>${vidSat}</saturation>
      <color>${vidColor}</color>
    </image>
    <image name="sys-logo">
      <visible>false</visible>
    </image>
    <image name="cabinetOverlay">
      <brightness>${vidBright}</brightness>
      <saturation>${vidSat}</saturation>
      <color>${vidColor}</color>
      <pos>0 0</pos>
      <cropSize>1 1</cropSize>
      <path>./../_inc/images/gmaster-overlay.webp</path>
      <zIndex>70</zIndex>
    </image>
    <text name="lastPlayed">
        <pos>.815 .04</pos>
        <horizontalAlignment>left</horizontalAlignment>
    </text>
    <datetime name="lastPlayedDate">    
        <pos>.863 .04</pos>
        <horizontalAlignment>left</horizontalAlignment>
    </datetime>
    <text name="playcount">
        <pos>.815 .06</pos>
        <horizontalAlignment>left</horizontalAlignment>
    </text>
    <text name="pkaycountnumber">    
        <pos>.863 .06</pos>
        <horizontalAlignment>left</horizontalAlignment>
    </text>
    <text name="kidgameLabel">
        <pos>.815 .08</pos>
        <horizontalAlignment>left</horizontalAlignment>
    </text>
    <text name="kidgame">
        <pos>.863 .08</pos>
        <horizontalAlignment>left</horizontalAlignment>
    </text>
  </view>
  <aspectRatio name="4:3">
        <view name="gamelist">
        <video name="gamelistBgVideo">
            <audio>false</audio>
                <cropPos>.8 0</cropPos>
            </video>
            <image name="gamelistBgImage">
                <cropPos>.8 0</cropPos>
            </image>
            <image name="cabinetOverlay">
                  <cropPos>.8 0</cropPos>
            </image>
            <video name="gamevideo">
                <pos>.75 0.359</pos>
                <maxSize>0.37 0.38</maxSize>
            </video>
            <image name="game-logo">
                <size>0.35 0.15</size>
