
<theme>
  <view name="system">
    <video name="backgroundpromo">
            <path>./../_inc/systems/system-view/1080p/default.mp4</path>
            <visible>${videoVis}</visible>
    </video>
    <image name="backgroundpromo">
            <path>./../_inc/systems/system-view/images/default.webp</path> 
    </image> 
    <carousel name="systemCarousel">
        <fontSize>.049</fontSize>
    </carousel>
  </view>  
  <view name="gamelist">
        <carousel name="gamelistCarousel">
                <defaultImage>./../_inc/images/ins.webp</defaultImage>
                <defaultFolderImage>./../_inc/images/folder.webp</defaultFolderImage>
        </carousel>
        
        <image name="gameimageINS">
            <visible>${lp-screenimg}</visible>
            <pos>0.763 0.38</pos>
            <cropSize>0.25 0.32</cropSize>
            <origin>0.5 0.5</origin>
            <imageType>screenshot, fanart, titlescreen</imageType> <!-- Dynamically fetch media -->
            <default>./../_inc/images/nut.jpg</default> <!-- Fallback to default cover -->
            <zIndex>68</zIndex>
        </image>
        <video name="gamevidINS">
            <visible>${lp-screenvid}</visible>
            <pos>0.763 0.38</pos>
            <cropSize>0.25 0.32</cropSize>
            <origin>0.5 0.5</origin>
            <default>./../_inc/images/nut.mp4</default> <!-- Fallback to default cover -->
            <zIndex>69</zIndex>
        </video>  

        <text name="insname">
                <pos>.03 .08</pos>
                <origin>0 .5</origin>
                <size>.6 .15</size>
                <fontSize>.1</fontSize>
                <fontPath>./.${h2Font}</fontPath>
                <letterCase>uppercase</letterCase>
                <metadata>systemName</metadata>
            
                <color>${highlightColor}</color>
                <lineSpacing>1</lineSpacing>
                <zIndex>65</zIndex>
            </text>
       
      <text name="appTitle">
                <pos>.02 .35</pos>
                <origin>0 .5</origin>
                <size>.5 .15</size>
                <fontSize>.05</fontSize>
                <fontPath>./.${listFont}</fontPath>
                <verticalAlignment>top</verticalAlignment>
                <metadata>name</metadata>
                <defaultValue>Unknown</defaultValue>
                <color>${baseColor}</color>
                <lineSpacing>1</lineSpacing>
                <zIndex>65</zIndex>
            </text>
        <text name="descriptiontext">
                <pos>0.02 .335</pos>
                <size>.47 .35</size>
                <metadata>description</metadata>
                <container>true</container>
                <fontSize>${paraFontSize}</fontSize>
                <color>${baseColor}</color>
                <fontPath>./.${pFont}</fontPath>
                <lineSpacing>1.5</lineSpacing>
                <zIndex>65</zIndex>
            </text>
            
            
