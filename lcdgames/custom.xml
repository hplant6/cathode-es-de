<theme>
  <view name="gamelist">
   <video name="gamevideo">
            <pos>0.77 0.39</pos>
            <maxSize>0.26 0.26</maxSize>
            <origin>0.5 0.5</origin>
            <imageType>screenshot, titlescreen, cover</imageType> <!-- Dynamically fetch media -->
            <default>./../_inc/images/tan-no-media.mp4</default> <!-- Fallback to default cover -->
            <interpolation>nearest</interpolation>
            <pillarboxes>true</pillarboxes>
            <pillarboxThreshold>0.85 0.90</pillarboxThreshold>
            <delay>0</delay>
            <fadeInTime>0</fadeInTime>
            <zIndex>30</zIndex>
    </video>
    <video name="gamelistBgVideo">
            <audio>false</audio>
      <pos>0 0</pos>
      <cropSize>1 1</cropSize>
      <path>./../_inc/systems/cabinets/1080p/${system.theme}.mp4</path> 
      <zIndex>9</zIndex>
      <brightness>${vidBright}</brightness>
      <saturation>${vidSat}</saturation>
      <color>${vidColor}</color>
    </video>
    <image name="gamelistBgImage">
      <pos>0 0</pos>
      <cropSize>1 1</cropSize>
      <path>./../_inc/systems/cabinets/images/${system.theme}.webp</path> 
      <zIndex>8</zIndex>
      <brightness>${vidBright}</brightness>
      <saturation>${vidSat}</saturation>
      <color>${vidColor}</color>
    </image>
    <image name="sys-logo">
      <visible>false</visible>
    </image>
    <image name="cabinetOverlay">
      <brightness>${vidBright}</brightness>
      <saturation>${vidSat}</saturation>
      <color>${vidColor}</color>
      <pos>0 0</pos>
      <cropSize>1 1</cropSize>
      <path>./../_inc/images/handheld-overlay.webp</path>
      <zIndex>70</zIndex>
    </image>
  </view>
  <aspectRatio name="4:3">
        <view name="gamelist">
            <image name="cabinetOverlay">
                  <cropPos>.8 0</cropPos>
            </image> 
            <video name="gamevideo">
                 <maxSize>0.28 0.28</maxSize>
            </video>            
        </view>
    </aspectRatio>
    <aspectRatio name="16:10">
        <view name="gamelist">
            <video name="gamevideo">
                <pos>.8 0.39</pos>
            </video>
            <text name="lastPlayed">
                <pos>.855 .04</pos>
            </text>
            <datetime name="lastPlayedDate">    
                <pos>.913 .04</pos>
            </datetime>
            <text name="playcount">
                <pos>.855 .06</pos>
            </text>
            <text name="pkaycountnumber">    
                <pos>.913 .06</pos>
            </text>
            <text name="kidgameLabel">
                <pos>.855 .08</pos>
            </text>
            <text name="kidgame">
                <pos>.913 .08</pos>
            </text>
       </view>
    </aspectRatio>
    <aspectRatio name="21:9">
        <view name="gamelist">
            <video name="gamevideo">
                <pos>0.77 0.35</pos>
                <maxSize>0.28 0.4</maxSize>
            </video>    
            <image name="sys-logo">
                <visible>true</visible>
                <pos>.023 .2</pos>
                <saturation>0</saturation>
                <brightness>2</brightness>
                <path>./../_inc/systems/logos/${system.theme}.webp</path>
                <color>${highlightColor}</color>
                <maxSize>0.08 0.08</maxSize>
                <zIndex>14</zIndex>
            </image>
             <text name="gameTitle">
                <visible>false</visible>
             </text>   
            <text name="lastPlayed">
                <visible>false</visible>
            </text>
            <datetime name="lastPlayedDate">    
                <visible>false</visible>
            </datetime>  
            <text name="playcount">
                <visible>false</visible>
            </text>
            <text name="pkaycountnumber">    
                <visible>false</visible>
            </text> 
            <text name="kidgameLabel">
                <visible>false</visible>
            </text>
            <text name="kidgame">
                <visible>false</visible>
            </text>
            <carousel name="gamelistCarousel">
                <maxItemCount>12</maxItemCount>
                <itemSize>0.12 0.25</itemSize>
                <selectedItemMargins>0.03 0.03</selectedItemMargins>
                <horizontalOffset>-0.43</horizontalOffset>
            </carousel> 
            <text name="descriptiontext">
                <size>.55 .13</size> 
            </text>
            <text name="badgesTitle">
                <pos>.134 .55</pos>
            </text>
            <badges name="badges">
                <pos>0.14 .57</pos>
            </badges> 
            <image name="badge-container">
                <pos>.135 .634</pos>
            </image>
            <text name="game-players">
                <pos>.125 .29</pos> <!-- +.015 -->
            </text>
            <image name="players-icon">
                <pos>.11 .29</pos> <!-- +.01 -->
            </image>
            <image name="genre-icon">
                <pos>.15 .29</pos> <!-- +.01 -->
            </image>
            <text name="genre">
                <pos>.165 .29</pos>  <!-- +.01 -->      
            </text>   
        </view>
    </aspectRatio>
</theme>