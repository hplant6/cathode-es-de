<theme>
    <include>./../longboxes.xml</include> <!-- Long 3d boxes / Cover -->
    
  <view name="gamelist">
   <video name="gamevideo">
            <visible>false</visible>
    </video>
    <image name="gameimage">
            <visible>true</visible>
            <pos>0.77 0.39</pos>
            <maxSize>0.26 0.26</maxSize>
            <origin>0.5 0.5</origin>
            <imageType> screenshot, fanart, titlescreen, cover</imageType> <!-- Dynamically fetch media -->
            <default>./../_inc/images/empty-state.webp</default> <!-- Fallback to default cover -->
            <zIndex>69</zIndex>
    </image>
    <video name="gamelistBgVideo">
            <audio>false</audio>
      <pos>0 0</pos>
      <cropSize>1 1</cropSize>
      <path>./../_inc/systems/cabinets/1080p/${system.theme}.mp4</path> 
      <zIndex>9</zIndex>
      <brightness>${vidBright}</brightness>
      <saturation>${vidSat}</saturation>
      <color>${vidColor}</color>
    </video>
    <image name="gamelistBgImage">
      <pos>0 0</pos>
      <cropSize>1 1</cropSize>
      <path>./../_inc/systems/cabinets/images/${system.theme}.webp</path> 
      <zIndex>8</zIndex>
      <brightness>${vidBright}</brightness>
      <saturation>${vidSat}</saturation>
      <color>${vidColor}</color>
    </image>
    <image name="sys-logo">
      <visible>false</visible>
    </image>
    <image name="cabinetOverlay">
      <brightness>${vidBright}</brightness>
      <saturation>${vidSat}</saturation>
      <color>${vidColor}</color>
      <pos>0 0</pos>
      <cropSize>1 1</cropSize>
      <path>./../_inc/images/handheld-overlay.webp</path>
      <zIndex>70</zIndex>
    </image>
  </view>
  <aspectRatio name="4:3">
        <view name="gamelist">
            <image name="cabinetOverlay">
                  <cropPos>.8 0</cropPos>
            </image> 
            <image name="gameimage">
                 <maxSize>0.28 0.28</maxSize>
            </image>            
        </view>
    </aspectRatio>
    <aspectRatio name="16:10">
        <view name="gamelist">
            <image name="gameimage">
                <pos>.8 0.39</pos>
            </image>
            <text name="lastPlayed">
                <pos>.855 .04</pos>
            </text>
            <datetime name="lastPlayedDate">    
                <pos>.913 .04</pos>
            </datetime>
            <text name="playcount">
                <pos>.855 .06</pos>
            </text>
            <text name="pkaycountnumber">    
                <pos>.913 .06</pos>
            </text>
            <text name="kidgameLabel">
                <pos>.855 .08</pos>
            </text>
            <text name="kidgame">
                <pos>.913 .08</pos>
            </text>
       </view>
    </aspectRatio>
    <aspectRatio name="3:2">
        <view name="gamelist">
            <image name="gameimage">
                <pos>.821 0.39</pos>
            </image>
            <text name="lastPlayed">
                <pos>.88 .04</pos>
            </text>
            <datetime name="lastPlayedDate">    
                <pos>.934 .04</pos>
            </datetime>
            <text name="playcount">
                <pos>.88 .06</pos>
            </text>
            <text name="pkaycountnumber">    
                <pos>.934 .06</pos>
            </text>
            <text name="kidgameLabel">
                <pos>.88 .08</pos>
            </text>
            <text name="kidgame">
                <pos>.934 .08</pos>
            </text>
       </view>
    </aspectRatio>
    <aspectRatio name="21:9">
        <view name="gamelist">
            <image name="gameimage">
                <pos>0.77 0.35</pos>
                <maxSize>0.28 0.4</maxSize>
            </image>    
            <image name="sys-logo">
                <visible>true</visible>
                <pos>.023 .2</pos>
                <saturation>0</saturation>
                <brightness>2</brightness>
                <path>./../_inc/systems/logos/${system.theme}.webp</path>
                <color>${highlightColor}</color>
                <maxSize>0.08 0.08</maxSize>
                <zIndex>14</zIndex>
            </image>
             <text name="gameTitle">
                <visible>false</visible>
             </text>   
            <text name="lastPlayed">
                <visible>false</visible>
            </text>
            <datetime name="lastPlayedDate">    
                <visible>false</visible>
            </datetime>  
            <text name="playcount">
                <visible>false</visible>
            </text>
            <text name="pkaycountnumber">    
                <visible>false</visible>
            </text> 
            <text name="kidgameLabel">
                <visible>false</visible>
            </text>
            <text name="kidgame">
                <visible>false</visible>
            </text>
            <carousel name="gamelistCarousel">
                <maxItemCount>12</maxItemCount>
                <itemSize>0.12 0.25</itemSize>
                <selectedItemMargins>0.03 0.03</selectedItemMargins>
                <horizontalOffset>-0.43</horizontalOffset>
            </carousel> 
            <text name="descriptiontext">
                <size>.55 .13</size> 
            </text>
            <text name="badgesTitle">
                <pos>.134 .55</pos>
            </text>
            <badges name="badges">
                <pos>0.14 .57</pos>
            </badges> 
            <image name="badge-container">
                <pos>.135 .634</pos>
            </image>
            <text name="game-players">
                <pos>.125 .29</pos> <!-- +.015 -->
            </text>
            <image name="players-icon">
                <pos>.11 .29</pos> <!-- +.01 -->
            </image>
            <image name="genre-icon">
                <pos>.15 .29</pos> <!-- +.01 -->
            </image>
            <text name="genre">
                <pos>.165 .29</pos>  <!-- +.01 -->      
            </text>   
        </view>
    </aspectRatio>
     <aspectRatio name="5:3_vertical">       
        <view name="gamelist">
            <video name="gamelistBgVideo">
                <pos>-.7 .19</pos>
                <cropSize>1.8 .6</cropSize>
            </video>
            <image name="gamelistBgImage">
                <pos>-.7 .19</pos>
                <cropSize>1.8 .6</cropSize>
            </image>
            <image name="cabinetOverlay">
                <pos>-.7 .19</pos>
                <cropSize>1.8 .6</cropSize>
            </image>

            <image name="gameimage">
                <pos>0.69 0.43</pos>
                <maxSize>0.46 0.18</maxSize>
            </image> 
            <image name="sys-logo">
                <visible>true</visible>
                <pos>.5 0.055</pos>
                <origin>.5 0</origin>
                <maxSize>0.5 0.15</maxSize>
                <color>${highlightColor}</color>
            </image>
            <image name="fade">
                <pos>.5 .75</pos>
                <origin>.5 .5</origin>
                <size>1 .15</size>
                <path>./../_inc/images/fade.svg</path>
                <zIndex>60</zIndex>
            </image> 
            <datetime name="mobile-stat">
                <pos>.335 .19</pos>
                <size>1 0.09</size>
                <visible>true</visible>
            </datetime>
            <text name="mobile-stat-title">
                <pos>.335 .175</pos>
                <size>1 0.09</size>
                <visible>true</visible>
            </text>    
        </view>
  </aspectRatio>
</theme>