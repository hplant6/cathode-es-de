    </variant> 
    <variant name="low-power">
        <include>./../${performance}</include>
        <include>./../lowpower.xml</include>
        <view name="system">
            <video name="lowpromo">
                <path>./.${hhVid}</path> 
            </video>
            <image name="lowpromoimg">
                <path>./.${hhImg}</path> 
            </image>
        </view>
        <view name="gamelist">
             <carousel name="lowCarousel">
                <pos>0.5 1.25</pos>
                <origin>0.5 1</origin>
                <size>1 1</size>
                <maxItemCount>4</maxItemCount>
                <itemSize>0.21 0.3</itemSize>
                <itemScale>1.9</itemScale>
                <itemsBeforeCenter>5</itemsBeforeCenter>
                <selectedItemMargins>0.06 0.06</selectedItemMargins>
                <horizontalOffset>-0.3</horizontalOffset>
                <verticalOffset>.22</verticalOffset>
            </carousel>
            <video name="lowpowerBgVideo">
                <path>./../_inc/images/lowpower/lowbg-hh.mp4</path>
            </video>
            <image name="lowpowerBgImg">
                <path>./../_inc/images/lowpower/lowbg-hh.webp</path>
            </image>
            <video name="lowvid">
                <default>./../_inc/images/empty-state-HH43.mp4</default>
            </video>
            <image name="cabinetOverlay">
                <path>./../_inc/images/lowpower/lowpower-megaduck.webp</path>
            </image>
            <image name="sys-logo">
                <pos>0.65 0.01</pos>
                <maxSize>0.25 0.18</maxSize>
                <visible>true</visible>
            </image>
            <image name="fade">
                <pos>.5 .75</pos>
                <origin>.5 .5</origin>
                <size>1 .6</size>
                <path>./../_inc/images/fade.svg</path>
                <zIndex>49</zIndex>
             </image>
        </view>
        <aspectRatio name="3:2">
            <view name="gamelist">
                <image name="sys-logo">
                    <pos>0.68 0.01</pos>
                    <maxSize>0.3 0.18</maxSize>
                </image>
            </view>
        </aspectRatio>
        <aspectRatio name="4:3">
            <view name="gamelist">
                <image name="sys-logo">
                    <pos>0.62 0.01</pos>
                    <maxSize>0.35 0.2</maxSize>
                </image>
                <carousel name="lowCarousel">
                    <pos>0.5 1.31</pos>
                    <itemScale>2.2</itemScale>
                    <maxItemCount>4</maxItemCount>
                    <itemSize>0.19 0.29</itemSize>
                    <horizontalOffset>-0.29</horizontalOffset>
                </carousel>
                <video name="lowpowerBgVideo">
                    <path>./../_inc/images/lowpower/lowbg-hh.mp4</path>
                    <cropSize>1.2 1 </cropSize>  
                    <pos>-.17 0</pos>
                </video>
                <image name="lowpowerBgImg">
                    <path>./../_inc/images/lowpower/lowbg-hh.webp</path>
                    <cropSize>1.2 1 </cropSize>  
                    <pos>-.17 0</pos>
                </image>
            </view>
        </aspectRatio>
        <aspectRatio name="16:10">
            <view name="gamelist">
                <image name="sys-logo">
                    <pos>0.65 0.005</pos>
                    <maxSize>0.3 0.18</maxSize>
                </image>
            </view>
        </aspectRatio>
        <aspectRatio name="5:3_vertical">
            <view name="gamelist">
                 <image name="sys-logo">
                    <pos>.5 .045</pos>
                    <origin>.5 0</origin>
                    <maxSize>0.6 0.33</maxSize>
                    <visible>true</visible>
                </image>
                <carousel name="lowCarousel">
                    <pos>0.5 1.09</pos>
                </carousel>
            </view>
        </aspectRatio>
    </variant>
</theme>        