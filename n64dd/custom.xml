
<theme>
    <include>./../longboxes.xml</include> <!-- Long 3d boxes / Cover -->

  <view name="gamelist">
   <image name="sys-logo">
            <pos>0.615 0.042</pos>
            <maxSize>0.14 0.14</maxSize>
            <saturation>0</saturation>
            <brightness>2</brightness>
            <color>${consoleLogo}</color>
            <path>./../_inc/systems/logos/${system.theme}.webp</path>
            <default>./../_inc/systems/logos/default.webp</default>
            <zIndex>14</zIndex>
    </image>
</view>
<aspectRatio name="3:2">
        <view name="gamelist">
            <image name="sys-logo">
                <pos>0.66 0.046</pos> <!-- +.03   +.012-->
            </image>
        </view>
  </aspectRatio>
<aspectRatio name="4:3">
        <view name="gamelist">
            <image name="sys-logo">
                <pos>0.57 0.05</pos> <!-- +.03   +.012-->
            </image>
        </view>
  </aspectRatio>
  <aspectRatio name="16:10">
        <view name="gamelist">
           <image name="sys-logo">
                <pos>0.64 0.045</pos>
            </image> 
        </view>
  </aspectRatio>
  <aspectRatio name="21:9">
        <view name="gamelist">
           <image name="sys-logo">
                <pos>.023 .2</pos>
                <color>${highlightColor}</color>
                <maxSize>0.08 0.08</maxSize>
            </image>
        </view>
  </aspectRatio>
  <aspectRatio name="5:3_vertical">
    <view name="gamelist">
           <image name="sys-logo">
                <pos>.5 0.055</pos>
                <origin>.5 0</origin>
                <maxSize>0.5 0.15</maxSize>
                <color>${highlightColor}</color>
            </image>   
        </view>
  </aspectRatio>
    
</theme>