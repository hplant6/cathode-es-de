<theme>
   

    <variables>   
        <gameCarouselItemSize>0.12 0.25</gameCarouselItemSize>        
    </variables>

    
    <!-- System View -->
    <view name="system">   
        <!-- System carousel -->
        <carousel name="systemCarousel">
            <pos>0 -.06</pos>
            <size>1 0.4</size>
            <type>horizontal</type>
            <horizontalOffset>0</horizontalOffset>
            <staticImage>./_inc/systems/logos/${system.theme}.webp</staticImage>
            <maxItemCount>3</maxItemCount>
            <itemSize>0.25 0.125</itemSize>
            <itemScale>1.7</itemScale>
            <imageColor>${highlightColor}</imageColor>
            <imageBrightness>2</imageBrightness>
            <imageSaturation>0</imageSaturation>
            <imageInterpolation>linear</imageInterpolation>
            <color>00000000</color>
            <textColor>${highlightColor}</textColor>
            <fontPath>${h2Font}</fontPath>
            <fontSize>${caraFontSize}</fontSize>
            <letterCase>uppercase</letterCase>
            <lineSpacing>1.2</lineSpacing>
            <selectedItemMargins>.01 .01</selectedItemMargins>
            <unfocusedItemOpacity>0.5</unfocusedItemOpacity>
            <unfocusedItemDimming>.4</unfocusedItemDimming>
            <fastScrolling>true</fastScrolling>
        </carousel>
        
        <text name="system-description">
                <text>${systemDescription}</text>
                <pos>0.5 0.895</pos>
                <size>0.5 0.07</size>
                <fontSize>${paraFontSize}</fontSize>
                <lineSpacing>1.8</lineSpacing>
                <color>${transColor}</color>
                <fontPath>${pFont}</fontPath>
                <verticalAlignment>bottom</verticalAlignment>
                <horizontalAlignment>center</horizontalAlignment>
                <origin>0.5 0</origin>
                <container>true</container>
                <visible>${remove}</visible>
             </text>
             <image name="system-controllers-outline">
                <pos>.57 .80</pos>
                <origin>1 .5</origin>
                <maxSize>.16 .15</maxSize>
                <path>./_inc/systems/system-controllers-outline/${system.theme}.svg</path>
                <default>./_inc/systems/system-controllers-outline/default.svg</default>
                <color>${contColor}</color>
                <zIndex>11</zIndex>
             </image>
             <text name="gameCount">
                <pos>0.5 0.3</pos>
                <origin>.5 1</origin>
                <size>0.4 0.05</size>
                <systemdata>gamecount</systemdata>
                <fontSize>${labelFontSize}</fontSize>
                <fontPath>${labelFont}</fontPath>
                <letterCase>uppercase</letterCase>
                <lineSpacing>1.1</lineSpacing>
                <horizontalAlignment>center</horizontalAlignment>
                <color>${transColor}</color>
             </text>
             <image name="backgroundpromo">
               <brightness>${vidBright}</brightness>
               <saturation>${vidSat}</saturation>
               <color>${vidColor}</color>
            </image> 
      
    </view>

    <aspectRatio name="21:9">
        <view name="system"> 
            <carousel name="systemCarousel">  
                <itemSize>0.24 0.12</itemSize>
                <pos>0 -.07</pos>
            </carousel>
            <image name="system-controllers-outline">
                <pos>.545 .82</pos>
                <maxSize>.13 .13</maxSize>
             </image>
             <text name="gameCount">
                <pos>0.6 0.27</pos>   
             </text>  
        </view> 
    </aspectRatio>
    <aspectRatio name="5:3_vertical">
        <view name="system, gamelist">
          
            <helpsystem name="help">
                <pos>0.5 0.02</pos>
            </helpsystem>
            <systemstatus name="gstatus-ind">
                <pos>.008 .95</pos>
                <height>0.08</height>
            </systemstatus>
            <clock name="LCDclock">
                <fontSize>.08</fontSize>
            </clock>
        </view>        
        <view name="system">
            <video name="backgroundpromo">
                <pos>0 0</pos>
                <cropSize>1 .9</cropSize>
            </video>
          <image name="backgroundpromo">
              <pos>0 .25</pos>
                <cropSize>1 .9</cropSize>
          </image>
          <carousel name="systemCarousel">
                <pos>0 -.1</pos>
            </carousel>
          <image name="sys-logo">
                <pos>0.5 0.06</pos>
                <maxSize>0.6 0.29</maxSize>
                <origin>.5 0 </origin>
          </image>
          <image name="fade">
            <pos>.5 .9</pos>
            <origin>.5 .5</origin>
            <size>1 .15</size>
            <path>./_inc/images/fade.svg</path>
            <zIndex>11</zIndex>
          </image>
          <text name="gameCount">
              <fontSize>${titlelFontSize}</fontSize>
              <pos>0.5 0.12</pos>
              <origin>.5 0</origin>
              <size>0.8 0.1</size>
              <zIndex>12</zIndex>
          </text>
          <image name="system-controllers-outline">
            <pos>.5 .72</pos>
            <origin>.5 .5</origin>
            <maxSize>.25 .25</maxSize>
            <zIndex>12</zIndex>
          </image>
          <text name ="system-description">
                <visible>true</visible>
                <pos>0.5 0.8</pos>
                <size>0.9 0.15</size>
          </text>
        </view>  
  </aspectRatio>
 

</theme>
